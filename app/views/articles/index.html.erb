<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.category %></td>
        <td><%= link_to article.title, article %></td>
        <td><%= truncate(article.content, :length => 20) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Create a new article', new_article_path if current_user.role == 'editor' %>

