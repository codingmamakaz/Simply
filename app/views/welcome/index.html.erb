<p id="notice"><%= notice %></p>

<h3>Welcome! To view each article, please log in or sign up.</h3>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <% articles = Article.where(category: category).limit(3) %>
      <% articles.each do |article| %>
        <tr>
          <td><%= article.category %></td>
          <td><%= link_to article.title, article %></td>
          <td><%= truncate(article.content, :length => 20) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


